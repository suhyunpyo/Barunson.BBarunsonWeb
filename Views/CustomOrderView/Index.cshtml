@section Scripts {
<script src="~/js/jquery.cookie.js"></script>
<script>
    $("#view_column").click(function () {
        if ($("#view_column").prop('checked')) {
            $(".colname").show();
            $(".normaltext").hide();
            $.cookie("view_column", "Y", { expires: 365 });
        } else {
            $(".colname").hide();
            $(".normaltext").show();
            $.cookie("view_column", "N", { expires: 365 });
        }
    })

    $("#view_codev").click(function () {
            if ($("#view_codev").prop('checked')) {
            $(".colcode").show();
            $.cookie("view_codev", "Y", { expires: 365 });
        } else {
            $(".colcode").hide();
                $.cookie("view_codev", "N", { expires: 365 });
        }
    })

    $("#view_pk").click(function () {
        if ($("#view_pk").prop('checked')) {
            $(".colpk").show();
            $.cookie("view_pk", "Y", { expires: 365 });
        } else {
            $(".colpk").hide();
            $.cookie("view_pk", "N", { expires: 365 });
        }
    })

    $(function () {
        if ($.cookie("view_column") == "Y") {
            $("#view_column").prop("checked", true);
            $(".colname").show();
            $(".normaltext").hide();
        }
            
        if ($.cookie("view_codev") == "Y") {
                $("#view_codev").prop("checked", true);
            $(".colcode").show();
        }

        if ($.cookie("view_pk") == "Y") {
            $("#view_pk").prop("checked", true);
            $(".colpk").show();
        }
    });

    $(".findtext").click(function () {
        $(".txt-hlight").removeClass("txt-hlight");

        var search = $(this).text();
        $(":contains('" + search + "')").each(function () {
            if ($(this).text() == search) {
                $(this).addClass("txt-hlight");
            }                
        });
    });

    $().ready(function(e){
        $('.preview-image').on('mouseover', function (e) {
            var item = $(this).find('.fa-file-image');
            if(item.length > 0) {
                var name = item.data('name');
                var folder = item.data('folder');
                $('#preview-image').attr('src', 'https://officefile.barunsoncard.com/preview/'+folder+'/'+name);
                $('#preview').css('top', e.clientY).css('left', e.clientX-800).show();
            }
        })
        .on('mousemove', function (e) {
            $('#preview').css('top', e.clientY).css('left', e.clientX-800);
        })
        .on('mouseout', function (e) {
            $('#preview').hide();
        });
    });

    function popupObj(obj, target) {
        var arrPath = [];
        arrPath.push(obj.getAttribute('data-pop'));
        arrPath.push(obj.getAttribute('data-param'));
        
        window.open(arrPath.join('?'), target, "width=800, height:600, scrollbars=auto");
    }

</script>
}